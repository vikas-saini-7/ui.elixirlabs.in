{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Registry Component",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "registry:ui",
        "registry:lib",
        "registry:block"
      ]
    },
    "description": {
      "type": "string"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "devDependencies": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "registryDependencies": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "type": {
            "type": "string"
          }
        },
        "required": [
          "path",
          "content"
        ]
      }
    }
  },
  "required": [
    "name",
    "type",
    "files"
  ]
}